<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg"

    >

    <ImageView
        android:id="@+id/imLogo"
        android:layout_width="217dp"
        android:layout_height="207dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="95dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/tUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imLogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="35dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Username"
        android:drawableLeft="@drawable/user"
        android:inputType="text"
        android:padding="10dp"
        android:text=""
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/tPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="35dp"
        android:background="#fff"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="Password"
        android:inputType=""
        android:padding="10dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="76dp"
        android:text="Login"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tForgotPassword"
        android:layout_width="142dp"
        android:layout_height="32dp"
        android:layout_below="@+id/tPassword"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="185dp"
        android:gravity="right"
        android:padding="2dp"
        android:text="Forgot Password"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tSignUp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/tPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="239dp"
        android:layout_marginBottom="187dp"
        android:padding="5dp"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/tNguon"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btLogin"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="47dp"
        android:text="Nguyễn Thúy Nga_21115053120228"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:textSize="15dp"

        />


</RelativeLayout>